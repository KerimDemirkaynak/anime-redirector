{
  "manifest_version": 3,
  "name": "Web Yönlendirici ve Engelleyici",
  "version": "1.7",
  "description": "Belirli web sitelerini yönlendirir ve engeller.",
  "permissions": ["declarativeNetRequest"],
  "host_permissions": [
    "*://*.vidmoly.to/*",
    "*://*.chatango.com/*",
    "*://*.anizmnet.chatango.com/*",
    "*://*.st.chatango.com/*",
    "*://*.animecix.net/*",
    "*://*.anm.cx/*",
    "*://*.asyaanimeleri.com/*",
    "*://*.hianime.to/*",
    "*://*.turkanime.co/*",
    "*://*.anizle.com/*",
    "*://*.tranimeizle.co/*"
  ],
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "ruleset_1",
        "enabled": true,
        "path": "rules.json"
      }
    ]
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
