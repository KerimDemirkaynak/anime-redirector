{
  "manifest_version": 3,
  "name": "__MSG_extensionName__",
  "version": "1.6",
  "description": "__MSG_extensionDescription__",
  "default_locale": "en",

  "permissions": [
    "declarativeNetRequest",
    "storage"
  ],
  "host_permissions": [
    "*://*.vidmoly.to/*",
    "*://*.chatango.com/*",
    "*://*.anizmnet.chatango.com/*",
    "*://*.st.chatango.com/*",
    "*://*.animecix.net/*",
    "*://*.anm.cx/*",
    "*://*.asyaanimeleri.com/*",
    "*://*.hianime.to/*",
    "*://*.turkanime.co/*"
  ],

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png"
    },
    "default_title": "__MSG_extensionName__",
    "default_popup": "popup.html"
  },

  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "ruleset_1",
        "enabled": true,
        "path": "rules.json"
      }
    ]
  },

  "browser_specific_settings": {
    "gecko": {
      "id": "aschannel111@gmail.com",
      "strict_min_version": "113.0"
    }
  }

}
